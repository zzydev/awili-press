{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    // cjs的包 用default导入会出现错误
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "shared/*": ["shared/*"],
      "@runtime": ["runtime/index.ts"]
    }
  },
  "include": ["e2e/**/*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["e2e/*.ts"]
}
